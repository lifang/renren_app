<% @object = advert %>
<%ads= Advert.ip_advert(request.headers["HTTP_X_REAL_IP"]) %>
<% if ads.blank? || @object=="baidu" %>
  <script type="text/javascript">
    var have_adv = false;
  </script>
<% else %>
  <div class="AD_text AD_width">
    <marquee class="marquee" scrollamount="2" direction=left>
      <% ads.each do |ad| %>
        <%= ad.content.html_safe %> &nbsp;&nbsp;&nbsp;&nbsp;
      <% end %>
    </marquee>
  </div>
  <script type="text/javascript">
    var have_adv = true;
  </script>
<% end %>