<script type="text/javascript">
  //获取access token
  var accessToken = window.location.hash.substring(1);
  //使用Access Token来获取用户的OpenID
  var path = "https://graph.qq.com/oauth2.0/me?";
  var queryParams = [accessToken, 'callback=callback'];
  var query = queryParams.join('&');
  var url = path + query;
  document.write("<script src="+ url +"><\/script>")
  function callback(user){
    $.ajax({
      async:true,
      type: "POST",
      url: "/similarities/manage_qq.json",
      dataType: "json",
      data : {
        open_id :user.openid,
        access_token:accessToken
      },
      success: function(data){
        var url="/similarities?web=qq&category="+data.category;
         if (data.listen){
          url += "&listen=1"
        }
        if(data.yes){
          window.parent.document.getElementsByTagName("iframe")[0].contentWindow.parent.window.location.href=url;
        }else{
          window.parent.document.getElementsByTagName("iframe")[0].contentWindow.parent.window.location.reload();
        }
      }
    });
  }
</script>
